{
    "name": "latte-carousel",
    "version": "1.3.0",
    "description": "LatteCarousel is a lightweight and responsive carousel.",
    "repository": "https://github.com/latte-carousel/latte-carousel.git",
    "author": {
        "name": "LatteCarousel",
        "url": "https://latte-carousel.github.io"
    },
    "license": "MIT",
    "private": false,
    "main": "dist/latte-carousel.min.js",
    "types": "dist/latte-carousel.d.ts",
    "keywords": [
        "carousel",
        "responsive",
        "javascript",
        "slider",
        "typescript"
    ],
    "homepage": "https://latte-carousel.github.io",
    "scripts": {
        "build": "parcel build src/ts/index.ts --global latte -o latte-carousel.min.js && yarn run build:types",
        "build:types": "dts-generator --name latte --project . --out dist/latte-carousel.d.ts",
        "watch": "parcel watch src/ts/index.ts",
        "serve": "http-server \"./\"",
        "test": "jest",
        "format": "yarn run format:prettier && yarn run format:csscomb",
        "format:prettier": "prettier --find-config-path --write \"./src/**\" \"./test/**\" \"./example/**\"",
        "format:csscomb": "csscomb \"./src/scss\" \"./example\"",
        "lint": "yarn run lint:tsc && yarn run lint:tslint && yarn run lint:eslint",
        "lint:tsc": "tsc -p tsconfig.json --noEmit",
        "lint:tslint": "tslint -c \"tslint.json\" \"./**/*.ts\"",
        "lint:eslint": "eslint \"./**/*.js\""
    },
    "devDependencies": {
        "@types/jest": "^23.3.3",
        "autoprefixer": "^9.2.1",
        "csscomb": "^4.2.0",
        "cssnano": "^4.1.5",
        "eslint": "^5.6.1",
        "http-server": "^0.11.1",
        "jest": "^23.6.0",
        "parcel-bundler": "^1.10.3",
        "postcss": "^7.0.5",
        "prettier": "1.14.3",
        "sass": "^1.14.3",
        "ts-jest": "^23.10.4",
        "tslint": "^5.11.0",
        "typescript": "^3.1.1",
        "dts-generator": "^2.1.0"
    }
}
